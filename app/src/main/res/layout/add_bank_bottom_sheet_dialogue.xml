<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="?android:colorBackground"
        android:layout_height="wrap_content">

        <LinearLayout
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/any"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:padding="20dp">
                <TextView
                    android:id="@+id/trans_title"
                    android:text="Add a bank Account"
                    android:textSize="25dp"
                    android:fontFamily="@font/googlesans_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/transprice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/rounded_gray_background"
                android:paddingEnd="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingStart="20dp">

             <Spinner
                 android:id="@+id/spinner"
                 android:text="bank"
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"/>

            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/transaction_title_field"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/googlesans_regular"
                android:hint="Bank Account Number"
                app:helperTextEnabled="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/warning_info">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/transaction_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="10"
                    android:fontFamily="@font/googlesans_regular"
                    android:inputType="number"
                    android:padding="20dp"
                    android:singleLine="true" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/statuss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/rounded_gray_background"
                android:padding="20dp">
                <TextView
                    android:text="Account Name"
                    android:textSize="12dp"
                    android:fontFamily="@font/googlesans_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/transa_status"
                    tools:text="Hello"
                    android:textSize="15dp"
                    android:fontFamily="@font/googlesans_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <Button
                android:id="@+id/addbank"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/primaryColor"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/googlesans_medium"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                style="@style/buttons"
                android:textAllCaps="false"
                android:text="Add Bank"
                android:layout_height="wrap_content"/>


        </LinearLayout>
    </LinearLayout>
</layout>